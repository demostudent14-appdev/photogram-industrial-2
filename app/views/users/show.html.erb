<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1>
      <%= @user.username %>
    </h1>

    <ul class="nav nav-pills nav-justified">  
      <li class="nav-item">
        <%= active_link_to "Posts", user_path(@user.username), class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= active_link_to "Liked", liked_path(@user.username), class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= active_link_to "Feed", feed_path(@user.username), class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= active_link_to "Followers", followers_path(@user.username), class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= active_link_to "Following", following_path(@user.username), class: "nav-link" %>
      </li>
    </ul>    
  </div>
</div>

<% current_user.own_photos.each do |zebra| %>
  <%= render "photos/photo", giraffe: zebra %>
<% end %>
